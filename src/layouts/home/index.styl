.home
  background-color white
  .generalItem
    color white
    height 150px
    padding-left 15px
    padding-right 15px
    margin 0 auto
    margin-top 30px
    >div
      margin 0 auto
      position relative
      border-radius 5px 5px
      background-size cover
      max-width 380px
      height 100%
  
    .generalItemIcon
      position absolute
      top 40px
      left 40px
    .generalItem1Label
      position absolute
      top 40px
      left 130px
      font-size 28px
    .generalItem2Label
      position absolute
      top 84px
      left 132px
      font-size 16px
  .generalInfoItemIcon
    text-align right
  .generalInfoItemName
    font-size 18px
    height 25px
    color #4a5563
  .generalInfoItemLabel
    margin-top 5px
    font-size 14px
    height 20px
    color #979a9e

  .blockItem
    height 179px
    width 100%
    margin-top 20px
    background-color white
    border-radius 4px 4px
    box-shadow 0 4px 16px 0 rgba(86, 129, 204, 0.1)
    padding 34px 0 34px 0
    font-size 14px
    &:nth-child(1)
      margin-top 10px
    .blockItemNumber
      text-align right
      margin-left 27px
      margin-right 15px
      margin-top 3px
      width 96px
      height 105px
      font-size 16px
      color white
      line-height 24px
      text-align center
    .blockItemHashLabel
      color #47484a
      height 20px
    .blockItemHash
      color #5b8ee6
      height 18px
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
    .blockItemTranscation
      margin-top 9px
      color #47484a
      height 20px
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
    .blockItemFrom
      color #979a9e
      margin-top 3px
      height 20px
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
    .blockItemReward
      color #979a9e
      height 20px
    .blockItemTime
      font-size 12px
      color #979a9e
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
    
  .transactionItem
    height 179px
    width 100%
    margin-top 20px
    background-color white
    border-radius 4px 4px
    box-shadow 0 0 10px 0 rgba(170, 170, 170, 0.2)
    background-color #ffffff
    padding 34px 0 46px 0
    font-size 14px

    &:nth-child(1)
      margin-top 10px
    .transactionItemIcon
      width 88px
      text-align right
      padding-top 5px
      padding-right 14px
    .transactionItemDuration
      width 53px

    .transactionItemTxLabel
      height 20px
      color #47484a


    .transactionItemTxHash
      height 18px
      color #5b8ee6
      overflow hidden
      text-overflow ellipsis
      white-space nowrap

    .transactionItemFromLabel
      height 20px
      color #47484a

    .transactionItemToLabel
      height 20px
      color #47484a

    .transactionItemFrom
      height 18px
      color #5b8ee6
      overflow hidden
      text-overflow ellipsis
      white-space nowrap


    .transactionItemTo
      height 18px
      color #5b8ee6
      overflow hidden
      text-overflow ellipsis
      white-space nowrap

    .transactionItemValue
      height 20px
      color #979a9e
      overflow hidden
      text-overflow ellipsis
      white-space nowrap

    .transactionItemTime
      font-size 12px
      color #979a9e
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
